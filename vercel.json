{
  "version": 2,
  "rewrites": [
    {
      "source": "/success",
      "destination": "/success.html"
    },
    {
      "source": "/cancel",
      "destination": "/cancel.html"
    },
    {
      "source": "/api/create-checkout",
      "destination": "/api/create-checkout.js"
    },
    {
      "source": "/api/verify-payment",
      "destination": "/api/verify-payment.js"
    },
    {
      "source": "/api/webhook",
      "destination": "/api/webhook.js"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        }
      ]
    }
  ]
}
